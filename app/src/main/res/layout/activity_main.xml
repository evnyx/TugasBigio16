<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="org.ikhlaashul.tugasbigio16.MainActivity"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="@color/black">

    <ImageView
        android:layout_width="285dp"
        android:layout_height="114dp"
        android:id="@+id/imageView"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/logo"
        android:layout_marginTop="100dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/imgFilm"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/films"
            android:layout_marginRight="50dp"
            android:onClick="imgFilm_onClick"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/imgPeople"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/peoples"
            android:layout_marginLeft="50dp"
            android:onClick="imgPeople_onClick"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/imgPlanets"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/planets"
            android:layout_marginRight="50dp"
            android:onClick="imgPlanet_onClick"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/imgSpecies"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/species"
            android:layout_weight="0.22"
            android:layout_marginLeft="50dp"
            android:onClick="imgSpecies_onClick"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/imgStarships"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/starships"
            android:layout_marginRight="50dp"
            android:onClick="imgStarship_onClick"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/imgVehicles"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/vehicles"
            android:layout_marginLeft="50dp"
            android:onClick="imgVehicle_onClick"/>
    </LinearLayout>


</LinearLayout>
